<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:padding="20dp"
    android:foreground="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/settings_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:layout_alignParentStart="true"
        android:gravity="start|center"
        style="@style/NoteRowStyles"
        />

    <ImageView
        android:id="@+id/arrow_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/outline_keyboard_arrow_right_black_24"
        android:contentDescription="@string/str_arrow_item"  />

    <Switch
        android:id="@+id/lock_switch_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="start"
        android:switchMinWidth="@dimen/value_60dp"
        android:visibility="gone" />

</RelativeLayout>