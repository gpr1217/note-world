<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/passcode_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_set_passcode"
        android:layout_marginTop="@dimen/value_10dp"
        android:layout_marginBottom="@dimen/value_10dp"
        android:gravity="center_horizontal"
        android:textSize="@dimen/settings_text_large"
        />

    <RelativeLayout
        android:id="@+id/passcode_lock_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@+id/passcode_title">

        <EditText
            android:id="@+id/num_1"
            android:layout_width="@dimen/value_50dp"
            android:layout_height="@dimen/value_50dp"
            android:paddingRight="@dimen/value_5dp"
            android:nextFocusDown="@id/num_2"
            style="@style/Passcode.Editext.Styles"
            />

        <EditText
            android:id="@+id/num_2"
            android:layout_width="@dimen/value_50dp"
            android:layout_height="@dimen/value_50dp"
            android:layout_toEndOf="@id/num_1"
            android:paddingRight="@dimen/value_5dp"
            android:nextFocusDown="@id/num_3"
            style="@style/Passcode.Editext.Styles"/>

        <EditText
            android:id="@+id/num_3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@id/num_2"
            android:paddingRight="5dp"
            android:nextFocusDown="@id/num_4"
            style="@style/Passcode.Editext.Styles"/>

        <EditText
            android:id="@+id/num_4"
            android:layout_width="@dimen/value_50dp"
            android:layout_height="@dimen/value_50dp"
            android:layout_toEndOf="@id/num_3"
            style="@style/Passcode.Editext.Styles"/>

    </RelativeLayout>

